{
  "env": {
    "node": true,
    "es2020": true,
    "jest": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "prefer-const": "warn",
    "no-undef": "off"
  },
  "ignorePatterns": [
    "dist/",
    "node_modules/",
    "coverage/",
    "src/client/",
    "**/*.ts",
    "**/*.tsx"
  ]
}
